generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum status {
  active
  inactive
  pending
}

model User {
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  id        Int      @id @default(autoincrement())
}

model File {
  name      String
  path      String
  createdAt DateTime @default(now())
  id        Int      @id @default(autoincrement())
  Author    Author?
}

model Author {
  photoId           Int?    @unique
  fullName          String
  email             String  @unique
  institution       String
  researchField     String
  publicationsCount Int
  orcidId           String?
  status            status  @default(active)
  biography         String?
  id                Int     @id @default(autoincrement())
  photo             File?   @relation(fields: [photoId], references: [id])
}
