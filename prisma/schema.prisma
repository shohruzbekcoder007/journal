generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  id        Int      @id @default(autoincrement())
}

model File {
  name      String
  path      String
  createdAt DateTime @default(now())
  id        Int      @id @default(autoincrement())
  Author    Author?
  Journal   Journal?
}

model Author {
  photoId           Int?     @unique
  fullName          String
  email             String   @unique
  institution       String
  researchField     String
  publicationsCount Int
  orcidId           String?
  status            status   @default(active)
  biography         String?
  id                Int      @id @default(autoincrement())
  updatedAt         DateTime @updatedAt
  createdAt         DateTime @default(now())
  photo             File?    @relation(fields: [photoId], references: [id])
}

model Journal {
  title       String
  field       String
  issn        String
  frequency   String
  description String
  publisher   String
  status      status   @default(active)
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  fileId      Int?     @unique
  year        Int?
  file        File?    @relation(fields: [fileId], references: [id])
}

enum status {
  active
  inactive
  pending
}
